<Window x:Class="BinaryWPF.Views.LanMakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BinaryWPF.ViewModels.Settings"
        Title="Launcher Builder" Height="360" Width="620" WindowStartupLocation="CenterScreen">
  <Window.DataContext>
    <vm:LanMakerViewModel />
  </Window.DataContext>

  <Grid Margin="18">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="120" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="Auto" />
    </Grid.ColumnDefinitions>

    <TextBlock Text="Usage" VerticalAlignment="Center" />
    <ComboBox Grid.Column="1" ItemsSource="{Binding Usages}" SelectedItem="{Binding SelectedUsage}" Width="220" />

    <TextBlock Grid.Row="1" Text="Game" VerticalAlignment="Center" />
    <ComboBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Games}" SelectedItem="{Binding SelectedGame}" Width="220" />

    <TextBlock Grid.Row="2" Text="Directory" VerticalAlignment="Center" />
    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DirectoryPath}" />
    <Button Grid.Row="2" Grid.Column="2" Content="Browse" Click="OnBrowse" Margin="8,0,0,0" />

    <TextBlock Grid.Row="3" Text="Endscript" VerticalAlignment="Center" />
    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding EndScriptFile}" />

    <StackPanel Grid.Row="5" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Save" Width="90" Margin="0,0,8,0" Click="OnSave" />
      <Button Content="Close" Width="90" IsCancel="True" />
    </StackPanel>
  </Grid>
</Window>
