<Window x:Class="BinaryWPF.Views.UI.StringRecordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="String Record" Height="320" Width="520" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
  <Grid Margin="18">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <TextBlock Text="Key" VerticalAlignment="Center" />
    <TextBox Grid.Column="1" Margin="8,0,0,6" Text="{Binding Key}" />

    <TextBlock Grid.Row="1" Text="Label" VerticalAlignment="Center" />
    <TextBox Grid.Row="1" Grid.Column="1" Margin="8,0,0,6" Text="{Binding Label}" />

    <TextBlock Grid.Row="2" Text="Text" VerticalAlignment="Top" />
    <TextBox Grid.Row="2" Grid.Column="1" Margin="8,0,0,0" Height="120" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding TextValue}" />

    <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="OK" Width="90" IsDefault="True" Margin="0,0,8,0" Click="OnOk" />
      <Button Content="Cancel" Width="90" IsCancel="True" />
    </StackPanel>
  </Grid>
</Window>
