<Window x:Class="BinaryWPF.Views.UI.ImportModeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Mode" Height="220" Width="380" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
  <Grid Margin="18">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel>
      <TextBlock Text="Select import behavior" FontWeight="SemiBold" />
      <RadioButton x:Name="NegateOption" Content="Negate (skip if exists)" Margin="0,10,0,0" IsChecked="True" />
      <RadioButton x:Name="SynchronizeOption" Content="Synchronize (merge/update existing)" Margin="0,6,0,0" />
      <RadioButton x:Name="OverrideOption" Content="Override (replace existing)" Margin="0,6,0,0" />
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="OK" Width="90" IsDefault="True" Margin="0,0,8,0" Click="OnOk" />
      <Button Content="Cancel" Width="90" IsCancel="True" />
    </StackPanel>
  </Grid>
</Window>
