<Window x:Class="BinaryWPF.Views.HasherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BinaryWPF.ViewModels.Tools"
        Title="Hasher" Height="320" Width="520" WindowStartupLocation="CenterScreen">
  <Window.DataContext>
    <vm:HasherViewModel />
  </Window.DataContext>

  <Grid Margin="18">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="120" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="80" />
    </Grid.ColumnDefinitions>

    <TextBlock Text="Input" VerticalAlignment="Center" />
    <TextBox Grid.Column="1" Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}" />
    <Button Grid.Column="2" Content="Copy" Click="CopyInput" />

    <TextBlock Grid.Row="1" Text="Bin Hash" VerticalAlignment="Center" />
    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding BinHash, Mode=OneWay}" IsReadOnly="True" />
    <Button Grid.Row="1" Grid.Column="2" Content="Copy" Click="CopyBinHash" />

    <TextBlock Grid.Row="2" Text="Bin File" VerticalAlignment="Center" />
    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding BinFile, Mode=OneWay}" IsReadOnly="True" />
    <Button Grid.Row="2" Grid.Column="2" Content="Copy" Click="CopyBinFile" />

    <TextBlock Grid.Row="3" Text="Vlt Hash" VerticalAlignment="Center" />
    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding VltHash, Mode=OneWay}" IsReadOnly="True" />
    <Button Grid.Row="3" Grid.Column="2" Content="Copy" Click="CopyVltHash" />

    <TextBlock Grid.Row="4" Text="Vlt File" VerticalAlignment="Center" />
    <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding VltFile, Mode=OneWay}" IsReadOnly="True" />
    <Button Grid.Row="4" Grid.Column="2" Content="Copy" Click="CopyVltFile" />
  </Grid>
</Window>
