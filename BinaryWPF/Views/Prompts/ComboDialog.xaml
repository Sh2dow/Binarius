<Window x:Class="BinaryWPF.Views.Prompts.ComboDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prompt" Height="240" Width="420" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
  <Grid Margin="18">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel>
      <TextBlock TextWrapping="Wrap" Text="{Binding Message}" Margin="0,0,0,10" />
      <ComboBox ItemsSource="{Binding Options}" SelectedIndex="{Binding SelectedIndex}" />
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="OK" Width="90" IsDefault="True" Margin="0,0,8,0" Click="OnOk" />
      <Button Content="Cancel" Width="90" IsCancel="True" />
    </StackPanel>
  </Grid>
</Window>
