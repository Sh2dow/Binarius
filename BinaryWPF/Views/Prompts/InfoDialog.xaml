<Window x:Class="BinaryWPF.Views.Prompts.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Information" Height="220" Width="420" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
  <Grid Margin="18">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock TextWrapping="Wrap" Text="{Binding Message}" />

    <Button Grid.Row="1" Content="OK" Width="90" HorizontalAlignment="Right" Margin="0,12,0,0"
            IsDefault="True" Click="OnOk" />
  </Grid>
</Window>
