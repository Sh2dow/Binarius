<Window x:Class="BinaryWPF.Views.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BinaryWPF.ViewModels.Editor"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        mc:Ignorable="d"
        Title="Binarius" Height="720" Width="1200" WindowStartupLocation="CenterScreen"
        MinWidth="940" MinHeight="560">
  <Window.DataContext>
    <vm:EditorViewModel />
  </Window.DataContext>

  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="Main">
        <MenuItem Header="New Launcher..." Command="{Binding NewLauncherCommand}" InputGestureText="Ctrl+N" />
        <MenuItem Header="Load Files..." Command="{Binding LoadFilesCommand}" InputGestureText="Ctrl+O" />
        <MenuItem Header="Reload Files" Command="{Binding ReloadFilesCommand}" InputGestureText="Ctrl+R" />
        <MenuItem Header="Save Files..." Command="{Binding SaveFilesCommand}" InputGestureText="Ctrl+S" />
        <MenuItem Header="Import Endscript..." Command="{Binding ImportEndscriptCommand}" InputGestureText="Ctrl+I" />
        <Separator />
        <MenuItem Header="Exit" Command="{Binding ExitCommand}" InputGestureText="Alt+F4" />
      </MenuItem>
      <MenuItem Header="Tools">
        <MenuItem Header="Hasher" Command="{Binding HasherCommand}" InputGestureText="Alt+H" />
        <MenuItem Header="Raider" Command="{Binding RaiderCommand}" InputGestureText="Alt+R" />
        <MenuItem Header="Swatcher" Command="{Binding SwatcherCommand}" InputGestureText="Alt+S" />
      </MenuItem>
      <MenuItem Header="Options">
        <MenuItem Header="Create Files Backups" Command="{Binding CreateBackupsCommand}" />
        <MenuItem Header="Restore Files Backups" Command="{Binding RestoreBackupsCommand}" />
        <MenuItem Header="Unlock Files For Modding" Command="{Binding UnlockFilesCommand}" />
        <MenuItem Header="Install SpeedReflect ASI" Command="{Binding InstallSpeedReflectCommand}" />
        <Separator />
        <MenuItem Header="Themes..." Command="{Binding ThemesCommand}" InputGestureText="Alt+T" />
        <MenuItem Header="Settings..." Command="{Binding SettingsCommand}" InputGestureText="Alt+O" />
      </MenuItem>
      <MenuItem Header="Scripting">
        <MenuItem Header="Run Command" Command="{Binding RunCommandCommand}" InputGestureText="F5" />
        <MenuItem Header="Run All Commands" Command="{Binding RunAllCommand}" InputGestureText="F9" />
        <MenuItem Header="Generate Command" Command="{Binding GenerateCommandCommand}" InputGestureText="F6" />
        <MenuItem Header="Clear Editor" Command="{Binding ClearCommandCommand}" InputGestureText="Ctrl+D" />
      </MenuItem>
      <MenuItem Header="Windows">
        <MenuItem Header="Run Game" Command="{Binding RunGameCommand}" />
        <MenuItem Header="Open Directory" Command="{Binding OpenDirCommand}" />
        <MenuItem Header="New Window" Command="{Binding NewWindowCommand}" />
      </MenuItem>
      <MenuItem Header="Help">
        <MenuItem Header="About" Command="{Binding AboutCommand}" />
        <MenuItem Header="Tutorials" Command="{Binding TutorialsCommand}" />
      </MenuItem>
    </Menu>

    <StatusBar DockPanel.Dock="Bottom">
      <StatusBarItem Content="{Binding StatusText}" />
      <Separator />
      <StatusBarItem Content="{Binding NodeInfo}" />
    </StatusBar>

    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="320" />
        <ColumnDefinition Width="5" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <DockPanel Grid.Column="0">
        <TextBox DockPanel.Dock="Top" Margin="8" Text="{Binding FindText, UpdateSourceTrigger=PropertyChanged}" />
        <TreeView Margin="8,0,8,8" ItemsSource="{Binding Nodes}" SelectedItemChanged="TreeView_SelectedItemChanged" MouseDoubleClick="TreeView_MouseDoubleClick">
          <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
              <TextBlock Text="{Binding Name}" />
            </HierarchicalDataTemplate>
          </TreeView.ItemTemplate>
          <TreeView.Resources>
            <Style TargetType="TreeViewItem">
              <Setter Property="IsExpanded" Value="False" />
              <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=TreeView}}" />
              <EventSetter Event="PreviewMouseRightButtonDown" Handler="TreeViewItem_PreviewMouseRightButtonDown" />
              <Setter Property="ContextMenu">
                <Setter.Value>
                  <ContextMenu>
                    <MenuItem Header="Add Node" Command="{Binding PlacementTarget.Tag.AddNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <MenuItem Header="Remove Node" Command="{Binding PlacementTarget.Tag.RemoveNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <Separator />
                    <MenuItem Header="Copy Node" Command="{Binding PlacementTarget.Tag.CopyNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <Separator />
                    <MenuItem Header="Open Editor..." Command="{Binding PlacementTarget.Tag.OpenEditorCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <Separator />
                    <MenuItem Header="Export Node..." Command="{Binding PlacementTarget.Tag.ExportNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <MenuItem Header="Import Node..." Command="{Binding PlacementTarget.Tag.ImportNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <Separator />
                    <MenuItem Header="Script Node" Command="{Binding PlacementTarget.Tag.ScriptNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <Separator />
                    <MenuItem Header="Move Node Up" Command="{Binding PlacementTarget.Tag.MoveNodeUpCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <MenuItem Header="Move Node Down" Command="{Binding PlacementTarget.Tag.MoveNodeDownCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <MenuItem Header="Move Node First" Command="{Binding PlacementTarget.Tag.MoveNodeFirstCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <MenuItem Header="Move Node Last" Command="{Binding PlacementTarget.Tag.MoveNodeLastCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                  </ContextMenu>
                </Setter.Value>
              </Setter>
              <Style.Triggers>
                <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                  <Setter Property="Background" Value="#FF2E3D3F" />
                  <Setter Property="Foreground" Value="White" />
                </DataTrigger>
              </Style.Triggers>
            </Style>
          </TreeView.Resources>
        </TreeView>
      </DockPanel>

      <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#333" />

      <Grid Grid.Column="2">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="5" />
          <RowDefinition Height="160" />
        </Grid.RowDefinitions>

        <wfi:WindowsFormsHost x:Name="PropertyGridHost" Grid.Row="0" Margin="8" />

        <GridSplitter Grid.Row="1" Height="5" VerticalAlignment="Stretch" Background="#333" />

        <TextBox Grid.Row="2" Margin="8" FontFamily="Consolas" TextWrapping="NoWrap"
                 AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto" Text="{Binding CommandText, UpdateSourceTrigger=PropertyChanged}" />
      </Grid>
    </Grid>
  </DockPanel>
</Window>
