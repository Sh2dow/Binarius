<Window x:Class="BinaryWPF.Views.RaiderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:BinaryWPF.ViewModels.Tools"
        Title="Raider" Height="260" Width="480" WindowStartupLocation="CenterScreen">
  <Window.DataContext>
    <vm:RaiderViewModel />
  </Window.DataContext>

  <Grid Margin="18">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="120" />
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="80" />
    </Grid.ColumnDefinitions>

    <TextBlock Text="Mode" VerticalAlignment="Center" />
    <ComboBox Grid.Column="1" SelectedIndex="{Binding SearchMode}" Width="200">
      <ComboBoxItem Content="Bin Hash" />
      <ComboBoxItem Content="Bin File" />
    </ComboBox>

    <TextBlock Grid.Row="1" Text="Bin Hash" VerticalAlignment="Center" />
    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding BinHash, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsBinFileMode}" />
    <Button Grid.Row="1" Grid.Column="2" Content="Copy" Click="CopyBinHash" />

    <TextBlock Grid.Row="2" Text="Bin File" VerticalAlignment="Center" />
    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding BinFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsBinHashMode}" />
    <Button Grid.Row="2" Grid.Column="2" Content="Copy" Click="CopyBinFile" />

    <TextBlock Grid.Row="3" Text="String" VerticalAlignment="Center" />
    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Result, Mode=OneWay}" IsReadOnly="True" />
    <Button Grid.Row="3" Grid.Column="2" Content="Copy" Click="CopyResult" />
  </Grid>
</Window>
