<Window x:Class="BinaryWPF.Views.ThemeSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:BinaryWPF.ViewModels.Settings"
        mc:Ignorable="d"
        Title="Themes" Height="560" Width="720" WindowStartupLocation="CenterScreen">
  <Window.DataContext>
    <vm:ThemeSelectorViewModel />
  </Window.DataContext>

  <Grid Margin="18">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal">
      <TextBlock Text="Theme" Width="80" VerticalAlignment="Center" />
      <ComboBox Width="220" ItemsSource="{Binding Themes}" SelectedItem="{Binding SelectedTheme}" />
    </StackPanel>

    <Grid Grid.Row="1" Margin="0,12,0,0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <StackPanel Grid.Column="0">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
          <TextBlock Text="Name" Width="80" VerticalAlignment="Center" />
          <TextBox Width="200" Text="{Binding ThemeName}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
          <TextBlock Text="Author" Width="80" VerticalAlignment="Center" />
          <TextBox Width="200" Text="{Binding ThemeAuthor}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <TextBlock Text="Version" Width="80" VerticalAlignment="Center" />
          <TextBox Width="200" Text="{Binding ThemeVersion}" />
        </StackPanel>
      </StackPanel>

      <StackPanel Grid.Column="1">
        <CheckBox Content="Dark Theme" IsChecked="{Binding DarkTheme}" />
      </StackPanel>
    </Grid>

    <ListView Grid.Row="2" Margin="0,12,0,0" ItemsSource="{Binding Colors}" MouseDoubleClick="OnColorDoubleClick">
      <ListView.View>
        <GridView>
          <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="200" />
          <GridViewColumn Header="Color" Width="120">
            <GridViewColumn.CellTemplate>
              <DataTemplate>
                <Border Background="{Binding Brush}" Height="18" Width="100" BorderBrush="#333" BorderThickness="1" />
              </DataTemplate>
            </GridViewColumn.CellTemplate>
          </GridViewColumn>
        </GridView>
      </ListView.View>
    </ListView>

    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
      <Button Content="Save As" Width="90" Margin="0,0,8,0" Click="OnSaveAs" />
      <Button Content="OK" Width="90" Margin="0,0,8,0" IsDefault="True" Click="OnOk" />
      <Button Content="Cancel" Width="90" IsCancel="True" />
    </StackPanel>
  </Grid>
</Window>
